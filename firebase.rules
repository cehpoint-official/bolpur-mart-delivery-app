rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Delivery Partners collection
    match /deliveryPartners/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Only admin can delete partners
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if isSignedIn();
      allow create: if false; // Only admin/system can create orders
      allow update: if isSignedIn(); // Add more granular checks in production
    }

    // Deliveries collection
    match /deliveries/{deliveryId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }

    // Earnings collection
    match /earnings/{earningId} {
      allow read: if isSignedIn() && request.query.limit <= 100; // Limit for partners
      allow create: if false; // Only system should create earnings
    }
  }
}
